{
  "id": "com.tuffex.translation",
  "name": "touch-translation-inner",
  "version": "1.0.0-Alpha",
  "icon": {
    "type": "file",
    "value": "assets/logo.svg"
  },
  "description": "一款全平台资源聚合翻译平台，支持多种翻译服务",
  "dev": {
    "enable": true,
    "address": "http://localhost:3333/",
    "source": false
  },
  "features": [
    {
      "id": "touch-translate",
      "name": "翻译",
      "desc": "翻译选中的文本或剪贴板内容",
      "icon": {
        "type": "file",
        "value": "assets/logo.svg"
      },
      "push": true,
      "platform": {
        "win32": true,
        "darwin": true,
        "linux": true
      },
      "commands": [
        {
          "type": "over",
          "value": [
            "fy",
            "翻译"
          ]
        }
      ]
    },
    {
      "id": "multi-source-translate",
      "name": "多源翻译",
      "desc": "同时使用多个翻译源进行翻译",
      "icon": {
        "type": "file",
        "value": "assets/logo.svg"
      },
      "push": true,
      "platform": { "win32": true, "darwin": true, "linux": true },
      "commands": [
        {
          "type": "over",
          "value": ["fy-multi", "多源翻译"]
        }
      ],
      "interaction": {
        "type": "webcontent",
        "path": "/multi-translate"
      }
    },
    {
      "id": "screenshot-translate",
      "name": "截图翻译",
      "desc": "截取屏幕进行翻译",
      "icon": {
        "type": "file",
        "value": "assets/logo.svg"
      },
      "push": false,
      "platform": { "win32": true, "darwin": true, "linux": true },
      "commands": [
        {
          "type": "over",
          "value": ["s-fy", "截图翻译"]
        }
      ],
      "interaction": {
        "type": "widget",
        "path": "screenshot-translate"
      }
    }
  ]
}
