{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "compilerOptions": {
    "composite": true,
    "types": ["electron-vite/node"],
    "moduleResolution": "bundler",
    "allowJs": true,
    // "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    /* Type checking */
    // "types": ["node", "element-plus/global"],
    "allowSyntheticDefaultImports": true,
    "paths": {
      "~/*": ["./src/*"],
      "~/assets/*": ["./src/assets/*"],
      "~/components/*": ["./src/components/*"],
      "~/views/*": ["./src/views/*"],
      "~/store/*": ["./src/store/*"],
      "~/plugins/*": ["./src/plugins/*"],
      "~/utils/*": ["./src/utils/*"],
      "~/types/*": ["./src/types/*"],
      "~": ["./src/*"]
    }
  },
  "include": ["electron.vite.config.*", "src/main/**/*", "src/preload/**/*", "generator-information.ts"]
}
